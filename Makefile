.PHONY: setup dev backend frontend ollama lint test check clean

# â”€â”€ Setup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
setup:
	@echo "ðŸ“¦ Setting up Fluently..."
	cp -n .env.example .env 2>/dev/null || true
	cd backend && uv sync
	cd frontend && npm install
	@echo "âœ… Done. Run 'make dev' to start."

# â”€â”€ Development â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
dev:
	@echo "ðŸš€ Starting all services..."
	$(MAKE) -j3 backend frontend ollama

backend:
	cd backend && fastapi dev src/main.py

frontend:
	cd frontend && npm run dev

ollama:
	ollama serve

# â”€â”€ Docker â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
up:
	docker compose up --build

down:
	docker compose down

# â”€â”€ Quality â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
lint:
	cd backend && uv run ruff check src/ && uv run black --check src/
	cd frontend && npm run lint

format:
	cd backend && uv run black src/ && uv run isort src/
	cd frontend && npx prettier --write src/

test:
	cd backend && uv run pytest
	cd frontend && npm run type-check

check: lint test
	@echo "âœ… All checks passed."

# â”€â”€ Cleanup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
clean:
	rm -rf backend/__pycache__ backend/.pytest_cache
	rm -rf frontend/node_modules frontend/dist
